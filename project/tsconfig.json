{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["server.ts", "src/routes/**/*.ts"],
  "exclude": ["node_modules", "src/components", "src/pages"]
}
