{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "declaration": false
  },
  "include": ["server.ts", "src/routes/**/*.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules", "src/components", "src/assets", "src/stores"]
}
